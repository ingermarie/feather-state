{
    "compilerOptions": {
        "strict": true,
        "module": "es6",
        "target": "ESNext",
        "removeComments": false,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "declaration": true,
        "sourceMap": true,
        "outDir": "./dist"
    },
    "include": [
        "./src/**/*.ts"
    ]
}
