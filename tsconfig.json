{
    "compilerOptions": {
        "strict": true,
        "module": "es6",
        "target": "ESNext",
        "jsx": "preserve",
        "removeComments": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "strictNullChecks": true,
        "sourceMap": true,
        "composite": true,
        "declarationDir": "./dist/types",
        "outDir": "./dist"
    },
    "include": [
        "./**/*.ts"
    ]
}
